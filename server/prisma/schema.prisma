generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Media {
  id        Int      @id @default(autoincrement())
  title     String
  image     String
  type  String
  director  String
  budget    Float
  location  String
  duration  Int      // duration in minutes (can use Float if fractional)
  year      Int
  createdAt DateTime @default(now())
}